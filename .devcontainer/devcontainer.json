{
	"name": "Clojure Dev Environment",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"BASE_IMAGE": "temurin-21-tools-deps-jammy"
		}
	},
	"features": {
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/devcontainers/features/common-utils:2": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"betterthantomorrow.calva"
			]
		}
	},
	"containerEnv": {
		"SHELL": "/usr/bin/zsh"
	}
}
